<Window x:Class="TdBank.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TdBank"
        mc:Ignorable="d"
        Title="天地银行用户登录" Height="300" Width="500">
    <Grid>
        <Label Content="用户名：" HorizontalAlignment="Left" Margin="100,46,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="usernameText" HorizontalAlignment="Left" Height="25" Margin="158,46,0,0" VerticalContentAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="216"/>
        <Label Content="  密码：" HorizontalAlignment="Left" Margin="100,89,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordText" HorizontalAlignment="Left" Margin="158,89,0,0" Height="25" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="216"/>
        <Button x:Name="login" Content="登录" HorizontalAlignment="Left" Margin="100,160,0,0" VerticalAlignment="Top" Width="110" Height="29"/>
        <Button x:Name="register" Content="注册" HorizontalAlignment="Left" Margin="264,160,0,0" VerticalAlignment="Top" Width="110" Height="29"/>
    </Grid>
</Window>
